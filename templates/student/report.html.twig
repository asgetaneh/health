										<tr>
											<th>#</th>
											<th>Program Level
																																	</th>
											

											<th>Student Number</th>


										</tr>
									</thead>
									<tbody>
										{% set count = 0 %}
										{% set total = 0 %}
										{% for programLevel in studentProgramLevel %}

