												<td>{{count}}</td>
												{# <td>{{ studentProgramLevelbysexandYear.name}}</td> #}
												<td>{{ programLevel.name}}</td>

												<td>{{ programLevel.count}}
												</td>
												{% set total = total + programLevel.count  %}


											</tr>

										{% else %}
											<tr>
												<td colspan="3">no records found</td>
											</tr>
										{% endfor %}
										<tr>
											<td colspan="2">Total</td>
											<td>{{total}}</td>
										</tr>
									</tbody>
								</table>

							</div>
						</div>
					</div>
					<div class=" col-md-4 small-box ">
						<div class="widget-box widget-color-dar" id="widget-box-8">
							<div class="widget-header">
								<h5 class="widget-title bigger dark">STUDENT BASED ON PROGRAM LEVEL AND SEX
								</h5>
							</div>
							<div class="widget-body">
								<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
									<thead>
										<tr>
											<th>#</th>
											<th>Program Level
											</th>

											<th>Sex</th>
											<th>Student Number</th>


										</tr>
									</thead>
									<tbody>
										{% set count = 0 %}
										{% set total = 0 %}
										{% for studentProgramLevelbysex in studentProgramLevelbysexs %}

