										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class=" col-md-4 small-box ">
						<div class="widget-box widget-color-dar" id="widget-box-8">
							<div class="widget-header">
								<h5 class="widget-title bigger dark">STUDENT BASED ON PROGRAM TYPE
								</h5>
							</div>
							<div class="widget-body">
								<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
									<thead>
										<tr>
											<th>#</th>
											<th>Program Type
											</th>

											<th>Student Number</th>


										</tr>
									</thead>
									<tbody>
										{% set count = 0 %}
										{% set total = 0 %}
										{% for programType in programTypes %}

											<tr>
												{% set count = count + 1 %}

												<td>{{count}}</td>
												<td>{{ programType.name}}</td>
												<td>{{ programType.count}}
												
												</td>
												{% set total = total + programType.count  %}


											</tr>
										{% else %}
											<tr>
												<td colspan="3">no records found</td>
											</tr>
										{% endfor %}
										<tr>
											<td colspan="2">Total</td>
											<td>{{total}}</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class=" col-md-4 small-box ">
						<div class="widget-box widget-color-dar" id="widget-box-8">
							<div class="widget-header">
								<h5 class="widget-title bigger dark">STUDENT BASED ON YEAR AND SEX
								</h5>
							</div>
							<div class="widget-body">
								<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
									<thead>
										<tr>
											<th>#</th>
											{# <th>Program Level
																																	</th> #}
											<th>Year</th>
											<th>Sex</th>

											<th>Student Number</th>


										</tr>
									</thead>
									<tbody>
										{% set count = 0 %}
										{% set total = 0 %}
										{% for studentbysexandYear in studentbysexandYears| sort((a, b) => a.year <=> b.year) %}

											<tr>
												{% set count = count + 1 %}

												<td>{{count}}</td>
												{# <td>{{ studentProgramLevelbysexandYear.name}}</td> #}
												<td>{{ studentbysexandYear.year}}</td>

												<td>{{ studentbysexandYear.sex}}</td>
												<td>{{ studentbysexandYear.count}}
												</td>
												{% set total = total + studentbysexandYear.count  %}


											</tr>

										{% else %}
											<tr>
												<td colspan="3">no records found</td>
											</tr>
										{% endfor %}
										<tr>
											<td colspan="3">Total</td>
											<td>{{total}}</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>

					<div class=" col-md-4 small-box ">
						<div class="widget-box " id="widget-box-8">
							<div class="widget-header">
								<h5 class="widget-title bigger dark">PROGRAM BASED ON PROGRAM LEVEL AND ENROLLMENT
								</h5>
							</div>
							<div class="widget-body">
								<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
									<thead>
										<tr>
											<th>#</th>
											<th>Program Level
											</th>
											<th>Enrollment</th>

											<th>Count</th>


										</tr>
									</thead>
									<tbody>
										{% set count = 0 %}
										{% set total = 0 %}
										{% for program in programs| sort((a, b) => a.enroll <=> b.enroll) %}

											<tr>
												{% set count = count + 1 %}

												<td>{{count}}</td>
												{# <td>{{ studentProgramLevelbysexandYear.name}}</td> #}
												<td>{{ program.enroll }}</td>

												<td>{{ program.name}}</td>
												<td>{{ program.count}}
												</td>
												{% set total = total + program.count  %}


											</tr>

										{% else %}
											<tr>
												<td colspan="3">no records found</td>
											</tr>
										{% endfor %}
										<tr>
											<td colspan="3">Total</td>
											<td>{{total}}</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
					
				</div>
			</div>
		</div>
	</div>

{% endblock %}
