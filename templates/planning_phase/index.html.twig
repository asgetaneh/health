{% extends 'base.html.twig' %}

{% block title %}PlanningPhase index
{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Planning Phase{% endtrans %}</li>
{% endblock %}
{% block body %}
<div class="row">
	<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
		<div class="widget-box widget-color-blue" id="widget-box-8">
			<div class="widget-header">
				<h5 class="widget-title bigger lighter">Planning Phase</h5>

				<div class="widget-toolbar"></div>

				<div class="widget-toolbar">
					<span class="badge badge-info">
						{% trans %}Total{% endtrans %}
						:
						<strong>{{planning_phases|length}}</strong>
					</span>
				</div>
			</div>

			<div class="widget-body">
				<div class="widget-toolbox" id="widget-toolbox-1">
					<div class="btn-toolbar">
						<div
							class="btn-group">
							{# {% if is_granted('CREATE_PERSPECTIVE') %} #}


						
							{# <form class="form-inline" method="post" style="display:inline;">
								<input type="hidden" name="nonapplicable" value="nonapp"/>
								<button type="submit" class="btn btn-warning btn-sm btn-white btn-round">
									<i class="ace-icon fa fa-times bigger-110 red2"></i>
									{% trans %}
									None Applicable perspectives{% endtrans %}</button>
							</form> #}


						</div>


					</div>
				</div>

				<div class="widget-main padding-16">

					<div class="table-responsive">
						<form class="form-inline" method="post" style="display:inline;">

							<div class="input-group">
								<input type="text" class="form-control" name="search" placeholder="search"/>
								<div class="input-group-btn">
									<button type="submit" class="btn btn-default no-border btn-sm">
										<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
									</button>
								</div>
							</div>
						</form>

						<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
							<thead>
								<tr>
									<th>#</th>
									<th>Name</th>
									<th>Code</th>
                                    <th>Year</th>
									<th>Description</th>
									<th>CreatedAt</th>
									<th>IsActive</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for  planning_phase in  planning_phases %}
									<tr>
					<td>{{ planning_phase.id }}</td>
					<td>{{ planning_phase.name }}</td>
					<td>{{ planning_phase.code }}</td>
                    <td>{{ planning_phase.planningYear}}</td>
					<td>{{ planning_phase.description }}</td>
					<td>{{ planning_phase.createdAt ? planning_phase.createdAt|date('d-M-Y') : '' }}</td>
					<td>{{ planning_phase.isActive ? 'Yes' : 'No' }}</td>
					<td>
                  
						<a class="btn btn-white btn-default btn-bold" href="{{ path('plan_creation', {'id': planning_phase.id}) }}"> <i class="ace-icon fa fa-reply bigger-120  "></i>Respond</a>
                        <a class="btn btn-white btn-info btn-bold" href="{{ path('planning_phase_show', {'id': planning_phase.id}) }}"> <i class="ace-icon fa fa-eye bigger-120"></i>show</a>
						<a class="btn btn-white btn-warning btn-bold" href="{{ path('planning_phase_edit', {'id': planning_phase.id}) }}"><i class="ace-icon fa fa-edit bigger-120 orange"></i>edit</a>
					</td>
				</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	

	
    </div>

    <div id="myModal" class="modal fade" role="dialog">
		<div
			class="modal-dialog">

			<!-- Modal content-->
			<div class="modal-content">
				{# <div class="modal-header bg-info">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">New Perspective</h4>
				</div> #}
				{# <div class="modal-body">
					{{ form_start(form,{'attr': {'class': 'my-form-class'} }) }}
					<div class="form-group">
						{{ form_label(form.name) }}
						{{ form_widget(form.name,{'attr':{ 'class': 'form-control'}}) }}

					</div>


				</div> #}


			</div>
			{# <div class="modal-footer">
				<input class="btn btn-primary pull-right  " type="submit" value="{% trans %}Create{% endtrans %}"/>
				<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
				{{ form_end(form) }}
			</div> #}
		</div>

	</div>
{% endblock %}

