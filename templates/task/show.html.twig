{% extends 'base.html.twig' %}

{% block title %}Edit Task
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Show Task
					</h5>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							<a href="{{ path('task_index') }}" class="btn btn-success">
								{% trans %}
								back
								{% endtrans %}
							</a>
						</span>
					</div>

				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar"></div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							<table class="table">
								<tbody>
									<tr>
										<th>Id</th>
										<td>{{ task.id }}</td>
									</tr>
									<tr>
										<th>Name</th>
										<td>{{ task.name }}</td>
									</tr>
								</tbody>
							</table>

							<div class="col-md-6">
                            	<a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning">edit</a>
							</div>
                            <div class="col-md-6">
								{{ include('task/_delete_form.html.twig') }}
							</div>

						</div>

					</div>

				</div>
			</div>
		</div>
	</div>


{% endblock %}
