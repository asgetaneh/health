{% extends 'base.html.twig' %}

{% block title %}InitiativeAttribute index{% endblock %}

{% block body %}
    <h1>InitiativeAttribute index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for initiative_attribute in initiative_attributes %}
            <tr>
                <td>{{ initiative_attribute.id }}</td>
                <td>{{ initiative_attribute.name }}</td>
                <td>{{ initiative_attribute.description }}</td>
                <td>{{ initiative_attribute.createdAt ? initiative_attribute.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('initiative_attribute_show', {'id': initiative_attribute.id}) }}">show</a>
                    <a href="{{ path('initiative_attribute_edit', {'id': initiative_attribute.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('initiative_attribute_new') }}">Create new</a>
{% endblock %}
