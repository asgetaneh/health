{% extends 'base.html.twig' %}

{% block title %}Objective{% endblock %}

{% block body %}
    <h1>Objective</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objective.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ objective.name }}</td>
            </tr>
            <tr>
                <th>OutPut</th>
                <td>{{ objective.outPut }}</td>
            </tr>
            <tr>
                <th>OutCome</th>
                <td>{{ objective.outCome }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ objective.weight }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ objective.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ objective.createdAt ? objective.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('objective_index') }}">back to list</a>

    <a href="{{ path('objective_edit', {'id': objective.id}) }}">edit</a>

    {{ include('objective/_delete_form.html.twig') }}
{% endblock %}
