{% extends 'base.html.twig' %}
{% block title %}permission index
{% endblock %}
{% block maintitle %}
	permission
{% endblock %}
{% block breadcrumb %}permission
{% endblock %}
{% block body %}


	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">User Group
					</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							{# <strong>{{tasks|length}}</strong> #}
						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div
								class="btn-group">
								{# {% if is_granted('CREATE_PERSPECTIVE') %} #}


								<a href="{{ path('permission_new') }}" class="btn btn-success">Create
								</a>


							</div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">


							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>Id</th>
										<th>Name</th>
										<th>Code</th>
										<th>Description</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% set count = 0 %}
									{% for permission in permissions %}
										{% set count = count + 1 %}
										<tr>
											<td>{{ count }}</td>
											<td>{{ permission.name }}</td>
											<td>{{ permission.code }}</td>
											<td>{{ permission.description }}</td>
											<td>
												<a href="{{ path('permission_show', {'id': permission.id}) }}" class="btn btn-primary ">
													<i class=" fa fa-eye f-2"></i>

												</a>
												<a href="{{ path('permission_edit', {'id': permission.id}) }}" class="btn btn-warning ">
													<i class=" fa fa-edit "></i>
												</a>

											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="5">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
