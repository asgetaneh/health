{% extends 'base.html.twig' %}

{% block title %}Permission
{% endblock %}
{% block maintitle %}
	Permission
{% endblock %}
{% block breadcrumb %}Show Permission
{% endblock %}

{% block body %}
	<div
		class="row">
		<!-- [ sample-page ] start -->
		<div class="col-sm-12">
			<div class="card">

				<div class="card-header">
					<h5>
						Show Permission</h5>
					<div class="card-header-right">
						<a href="{{ path('permission_index') }}" class="btn btn-success">back to list</a>


					</div>
				</div>
				<div class="card-body">
					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ permission.id }}</td>
							</tr>
							<tr>
								<th>Name</th>
								<td>{{ permission.name }}</td>
							</tr>
							<tr>
								<th>Code</th>
								<td>{{ permission.code }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ permission.description }}</td>
							</tr>
						</tbody>
					</table>
					<a href="{{ path('permission_edit', {'id': permission.id}) }}" class="btn btn-warning">edit</a>
					{{ include('permission/_delete_form.html.twig') }}

				</div>
			</div>
		</div>
		<!-- [ sample-page ] end -->
	</div>


{% endblock %}
