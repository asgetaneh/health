{% extends "base.html.twig" %}
{% block subTitle %}
	<li class="active">{% trans %}SMIS{% endtrans %}</li>
	<li class="active">
		<a href="{{path('key_performance_indicator_index')}}">{% trans %}Key Performance Indicator{% endtrans %}</a>
	</li>
{% endblock %}
{% block body %}

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">
						<strong>{% trans %}Key Performance Indicator{% endtrans %}</strong>
					</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{key_performance_indicators.getTotalItemCount()}}</strong>
						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group">
								{% if is_granted('ad_kpi') %}


									<a class="btn btn-primary btn-sm btn-white btn-round" data-toggle="modal" data-target="#myModal">
										<i class="ace-icon fa fa-plus bigger-110 blue"></i>
										{% trans %}
										Add New{% endtrans %}</a>
								{% endif %}

							</div>


						</div>
					</div>

					<div class="widget-main padding-16">
						<div class="row">
							<div class="search-area well col-md-12">

								<div class="row">
									{{ form_start(filterform,{'attr': {'role':'form','class':' ' },'method':'GET'}) }}
									<div class="col-md-4">
										<div class="form-group form-group-sm">
											{{ form_label(filterform.goal,'Goal') }}
											{{ form_widget(filterform.goal,{'attr':{'class':'select2 form-control ','data-placeholder':'chose goal' }}) }}
										</div>
									</div>
									{# <div class="clearfix "></div> #}
									<div class="col-md-4">
										<div class="form-group">
											{{ form_label(filterform.perspective,'Perspective') }}
											{{ form_widget(filterform.perspective,{'attr':{'class':'select2 form-control','data-placeholder':'chose perspective' }}) }}
										</div>
									</div>

									<div class="col-md-4">
										<div class="form-group">
											{{ form_label(filterform.objective,'Objective') }}
											{{ form_widget(filterform.objective,{'attr':{'class':'select2 form-control','data-placeholder':'chose objective' }}) }}
										</div>
									</div>
									<div class="clearfix "></div>
									<div class="col-md-3">
										<div class="form-group">
											{{ form_label(filterform.strategy,'Strategy') }}
											{{ form_widget(filterform.strategy,{'attr':{'class':'select2 form-control','data-placeholder':'chose strategy' }}) }}
										</div>
									</div>

									<div class="col-md-3">
										<div class="form-group" style="margin-top:25px;">
											<input type="submit" class="btn btn-primary btn-sm " value="{% trans %}Filter{% endtrans %}">
										</div>
									</div>


									{{ form_end(filterform) }}
								</div>


							</div>

						</div>
						<div class="table-responsive">
							<form class="form-inline" method="get" style="display:inline;">

								<div class="input-group">
									<input type="text" class="form-control" name="search" placeholder="search"/>
									<div class="input-group-btn">
										<button type="submit" class="btn btn-default no-border btn-sm">
											<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
										</button>
									</div>
								</div>
							</form>

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>{% trans %}KPI{% endtrans %}</th>
										{# <th>Strategy</th> #}
										<th>{% trans %}Objective{% endtrans %}</th>
										<th>{% trans %}Goal{% endtrans %}</th>
										{# <th>Prespective</th> #}
										<th>{% trans %}Weight{% endtrans %}</th>
										<th>{% trans %}Status{% endtrans %}</th>
										{# <th>description</th> #}
										<th>{% trans %}actions{% endtrans %}</th>
									</tr>
								</thead>
								<tbody>
									{% set count =  key_performance_indicators.getItemNumberPerPage() * (key_performance_indicators.getCurrentPageNumber() -1) %}

									{% for key_performance_indicator in key_performance_indicators %}
										<tr>
											{% set count = count + 1 %}
											<td>{{ key_performance_indicator.kpiNumber }}</td>
											<td>{{ key_performance_indicator|title }}</td>
											{# <td>{{ key_performance_indicator.strategy }}</td> #}
											<td>{{ key_performance_indicator.strategy.objective }}</td>
											<td>{{ key_performance_indicator.strategy.objective.goal}}</td>
											{# <td>{{ key_performance_indicator.strategy.objective.perspective }}</td> #}

											<td>{{ key_performance_indicator.weight }}</td>
											<td>
												{% if key_performance_indicator.isActive %}
													<span class="badge badge-success">{% trans %}Active{% endtrans %}</span>
												{% else %}
													<span class="badge badge-danger">{% trans %}Deactived{% endtrans %}</span>
												{% endif %}
											</td>
											{# <td>{{ key_performance_indicator.description }}</td> #}
											<td>
												{% if is_granted('vw_kpi_dtl') %}


													<a href="{{ path('key_performance_indicator_show', {'id': key_performance_indicator.id}) }}" style="display:inline;" class="btn btn-primary btn-sm">
														<i class="fa fa-eye"></i>
													</a>
												{% endif %}
												{% if is_granted('edt_kpi') %}
													<a href="{{ path('key_performance_indicator_edit', {'id': key_performance_indicator.id}) }}" style="display:inline;" class="btn btn-warning btn-sm">
														<i class="fa fa-edit"></i>
													</a>
												{% endif %}
												{% if is_granted('deact_kpi') or is_granted('act_kpi') %}
													<form class="" style="display:inline;" action="" method="post">


														<input type="hidden" name="{{key_performance_indicator.isActive ?"deactive":"active"}}" value="{{ key_performance_indicator.id}}">
														<button title="{{key_performance_indicator.isActive?"deactivate":"activate"}}" type="submit" style="display:inline;" class="btn btn-sm {{ key_performance_indicator.isActive?" btn-danger":" btn-success"}}" value="" onclick="return confirm('are you sure you want to {{key_performance_indicator.isActive?" deactivate":" activate"}}')">
															<i class="{{key_performance_indicator.isActive?"fa fa-times":"fa fa-check"}}"></i>
														</button>

													</form>
												{% endif %}
											</td>
										</tr>
									</td>
								</tbody>
							</tr>
						{% else %}
							<tr>
								<td colspan="7">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="pull-right pagination" id="custompaginator">{{ knp_pagination_render(key_performance_indicators) }}</div>

			</div>
		</div>

	</div>
	<div id="myModal" class="modal fade" role="dialog">
		<div
			class="modal-dialog " style="width:1200px;">

			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header bg-info">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">New KeyPerformanceIndicator</h4>
				</div>
				<div class="modal-body">
					{{ form_start(form,{'attr': {'class': 'my-form-class'} }) }}
					<div class="row">

						{% for f in form  %}
							{% if f != form._token %}
								<div class="form-group col-md-3">
									<label>{{ form_label(f) }}</label>
									{{ form_widget(f) }}
								</div>

							{% endif %}

						{% endfor %}

					</div>


				</div>
<div class="modal-footer">
	<input class="btn btn-primary pull-right" type="submit" value="{% trans %}Create{% endtrans %}"/>
	<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
	{{ form_end(form) }}</div>



			</div>

			
		</div>


		{# <div class="modal-footer">
			<input class="btn btn-primary pull-right  " type="submit" value="{% trans %}Create{% endtrans %}"/>
			<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
			{{ form_end(form) }}
		</div> #}
	</div>
</div></div></div>{% endblock %}
