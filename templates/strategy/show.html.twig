{% extends 'base.html.twig' %}

{% block title %}Strategy{% endblock %}

{% block body %}
    <h1>Strategy</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ strategy.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ strategy.name }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ strategy.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ strategy.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ strategy.createdAt ? strategy.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('strategy_index') }}">back to list</a>

    <a href="{{ path('strategy_edit', {'id': strategy.id}) }}">edit</a>

    {{ include('strategy/_delete_form.html.twig') }}
{% endblock %}
