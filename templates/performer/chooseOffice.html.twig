{% extends 'base.html.twig' %}

{% block title %}
	Choose Office
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header"></div>

				<div class="widget-body">


					<div class="widget-main padding-16">


						{% if app.user.status == 0 %}


							<div class="row">
								{{ form_start(filterform,{'attr': {'role':'form','class':' ' }}) }}
									<div class="col-md-4">
									<div class="form-group form-group-sm">
										{{ form_label(filterform.stafType,'Staff Type') }}
										{{ form_widget(filterform.stafType,{'attr':{'class':'select2 form-control ','data-placeholder':'' }}) }}
									</div>
								</div>
                                <div class="col-md-4">
									<div class="form-group form-group-sm">
										{{ form_label(filterform.operationalOffice,'OperationalOffice') }}
										{{ form_widget(filterform.operationalOffice,{'attr':{'class':'select2 form-control ','data-placeholder':'' }}) }}
									</div>
								</div>
							

								<div class="col-md-1">
									<div class="form-group" style="margin-top:25px;">
										<input type="submit" class="btn btn-primary btn-sm " value="Choose">
									</div>
								</div>
								{{form_end(filterform)}}
							</div>
						{% endif %}

					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
