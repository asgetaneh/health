{% extends 'base.html.twig' %}

{% block subTitle %}
	<li class="active">{% trans %}
		SMIS{% endtrans %}</li>
	<li class="active">{% trans %}
		InitiativeMeasurement{% endtrans %}</li>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">
						<strong>InitiativeMeasurement</strong>
					</h5>
					<div class="widget-toolbar">

						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{initiative_measurements|length}}</strong>
						</span>

					</div>


				</div>
				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group">
								<a class="btn btn-primary btn-sm btn-white btn-round" data-toggle="modal" data-target="#myModal">
									<i class="ace-icon fa fa-plus bigger-110 blue"></i>
									{% trans %}
									Add New
									{% endtrans %}</a>

							</div>
						</div>
					</div>
					<div class="widget-main padding-16">
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Name</th>
										<th>Description</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for initiative_measurement in initiative_measurements %}
										<tr>
											<td>{{ initiative_measurement.id }}</td>
											<td>{{ initiative_measurement.name }}</td>
											<td>{{ initiative_measurement.description }}</td>
											<td>
												<a href="{{ path('initiative_measurement_show', {'id': initiative_measurement.id}) }}">
													<i class="btn btn-primary fa fa-eye"></i>
												</a>
												<a href="{{ path('initiative_measurement_edit', {'id': initiative_measurement.id}) }}">
													<i class="btn btn-warning fa fa-edit"></i>
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="4">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>

						</div>
					</div>
				</div>

			</div>

		</div>
	</div>
	<div id="myModal" class="modal fade" role="dialog">
		<div
			class="modal-dialog">

			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header bg-primary">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">New InitiativeMeasurement
					</h4>
				</div>

				<div class="modal-body">
					{{ form_start(form,{'attr': {'class': 'my-form-class'} }) }}

					<div class="form-group">
						{{ form_label(form.name,"Core Task Name ") }}
						{{ form_widget(form.name,{'attr':{ 'class': 'form-control'}}) }}

					</div>


					<div class="form-group">
						{{ form_label(form.description) }}
						{{ form_widget(form.description,{'attr':{ 'class': 'form-control'}}) }}

					</div>

				</div>

			</div>
			<div class="modal-footer">
				<input class="btn btn-primary pull-right  " type="submit" value="{% trans %}Create{% endtrans %}"/>
				<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
				{{ form_end(form) }}
			</div>
		</div>

	</div>
{% endblock %}
{% block javascripts %}{% endblock %}
