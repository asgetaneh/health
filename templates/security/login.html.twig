{% extends 'general.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="row" style="margin-bottom:40px;">
		<div class="col-sm-4" style="margin-top:20px;">
			<div class="wrapper fadeInDown" style="height: 400px; width: 400px">
				<div id="formContent">
					<div class="fadeIn first" style="margin-top:20px;">
						<img src="{{ asset('image/loginlogo.png') }}" id="icon" alt="User Icon" style="width: 250px; height: 250px"/>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
						<label for="inputUsername">Username</label>
						<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>

						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{#
										        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
										        See https://symfony.com/doc/current/security/remember_me.html
										
										        <div class="checkbox mb-3">
										            <label>
										                <input type="checkbox" name="_remember_me"> Remember me
										            </label>
										        </div>
										    #}

						<button class="btn btn-lg btn-primary" type="submit">
							Sign in
						</button>
					</form>
					<div id="formFooter">
						<a class="underlineHover" href="https://uas.ju.edu.et">Forgot Password?</a>
					</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
