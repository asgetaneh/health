{% extends 'base.html.twig' %}

{% block subTitle %}


<li class="active">{% trans %}
    SMIS{% endtrans %}</li>
  <li class="active">{% trans %}
    Initiative Behaviour Category{% endtrans %}</li>
{% endblock %}

{% block body %}
    

    

    <div class="row">
    <div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
      <div class="widget-box widget-color-blue" id="widget-box-8">
        <div class="widget-header">
          <h5 class="widget-title bigger lighter">
          <strong> Initiative Behaviour Category</strong>
           
          </h5>
          <div class="widget-toolbar">
            <span class="badge badge-info">
              {% trans %}Total{% endtrans %}
              :
              <strong>{{initiative_behaviour_catagories|length}}</strong>
            </span>
          </div>
        </div>
        <div class="widget-body">
          <div class="widget-toolbox" id="widget-toolbox-1">
            <div class="btn-toolbar">
              <div class="btn-group">
                <a class="btn btn-primary btn-sm btn-white btn-round" data-toggle="modal" data-target="#myModal">
                  <i class="ace-icon fa fa-plus bigger-110 blue"></i>
                  {% trans %}
                  Add New {% endtrans %}</a>
                
              </div>
            </div>
          </div>
          <div class="widget-main padding-16">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Code</th>
                    <th>CreatedAt</th>
                    <th>IsActive</th>
                    <th>actions</th>
                  </tr>
                </thead>
                <tbody>
                 {% for initiative_behaviour_catagory in initiative_behaviour_catagories %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ initiative_behaviour_catagory.name }}</td>
                <td>{{ initiative_behaviour_catagory.description }}</td>
                <td>{{ initiative_behaviour_catagory.code }}</td>
                <td>{{ initiative_behaviour_catagory.cretedAt ? initiative_behaviour_catagory.cretedAt|date('d-M-Y') : '' }}</td>
                <td>
                    <a href="{{ path('initiative_behaviour_catagory_show', {'id': initiative_behaviour_catagory.id}) }}">show</a>
                    <a href="{{ path('initiative_behaviour_catagory_edit', {'id': initiative_behaviour_catagory.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header bg-primary">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">New Initiative Category</h4>
        </div>

        <div class="modal-body">
          {{ form_start(form,{'attr': {'class': 'my-form-class'} }) }}
          <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name,{'attr':{ 'class': 'form-control'}}) }}

          </div>
          <div class="form-group">
            {{ form_label(form.code) }}
            {{ form_widget(form.code,{'attr':{ 'class': 'select2 form-control'}}) }}

          </div>
          
          
         
         
          <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description,{'attr':{ 'class': 'form-control'}}) }}

          </div>

        </div>

      </div>
      <div class="modal-footer">
        <input class="btn btn-primary pull-right  " type="submit" value="{% trans %}Create{% endtrans %}"/>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        {{ form_end(form) }}
      </div>
    </div>

  </div>

  <script>
    $(function () {
      $('.select2').css('width', '100%').select2({allowClear: true})
    })
  </script>
{% endblock %}
