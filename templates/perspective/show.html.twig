{% extends 'base.html.twig' %}

{% block title %}Perspective{% endblock %}

{% block body %}
    <h1>Perspective</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ perspective.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ perspective.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ perspective.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ perspective.createdAt ? perspective.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ perspective.updatedAt ? perspective.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UsedToPlan</th>
                <td>{{ perspective.usedToPlan ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('perspective_index') }}">back to list</a>

    <a href="{{ path('perspective_edit', {'id': perspective.id}) }}">edit</a>

    {{ include('perspective/_delete_form.html.twig') }}
{% endblock %}
