{% extends 'base.html.twig' %}

{% block title %}Goal{% endblock %}

{% block body %}
    <h1>Goal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ goal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ goal.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ goal.description }}</td>
            </tr>
            <tr>
                <th>OutPut</th>
                <td>{{ goal.outPut }}</td>
            </tr>
            <tr>
                <th>OutCome</th>
                <td>{{ goal.outCome }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ goal.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ goal.createdAt ? goal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('goal_index') }}">back to list</a>

    <a href="{{ path('goal_edit', {'id': goal.id}) }}">edit</a>

    {{ include('goal/_delete_form.html.twig') }}
{% endblock %}
