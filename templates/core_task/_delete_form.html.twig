<form method="post" action="{{ path('core_task_delete', {'id': core_task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ core_task.id) }}">
    <button class="btn">Delete</button>
</form>
