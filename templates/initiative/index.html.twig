{% extends 'base.html.twig' %}

{% block title %}Initiative index
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Initiative</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{initiatives|length}}</strong>
						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div
								class="btn-group">
								{# {% if is_granted('CREATE_PERSPECTIVE') %} #}
								<a class="btn btn-primary btn-sm btn-white btn-round" data-toggle="modal" data-target="#myModal">
									<i class="ace-icon fa fa-plus bigger-110 blue"></i>
									{% trans %}
									New Initiatives{% endtrans %}</a>
								<form class="form-inline" method="post" style="display:inline;">
									<input type="hidden" name="nonapplicable" value="nonapp"/>
									<button type="submit" class="btn btn-warning btn-sm btn-white btn-round">
										<i class="ace-icon fa fa-times bigger-110 red2"></i>
										{% trans %}
										None Applicable Initiatives{% endtrans %}</button>
								</form>

							</div>

						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							<form class="form-inline" method="post" style="display:inline;">

								<div class="input-group">
									<input type="text" class="form-control" name="search" placeholder="search"/>
									<div class="input-group-btn">
										<button type="submit" class="btn btn-default no-border btn-sm">
											<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
										</button>
									</div>
								</div>
							</form>

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>Name</th>
										<th>Description</th>
										<th>MaximumValue</th>
										<th>MinimumValue</th>
										<th>CreatedAt</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for initiative in initiatives %}
										<tr>
											<td>{{ initiative.id }}</td>
											<td>{{ initiative.name }}</td>
											<td>{{ initiative.description }}</td>
											<td>{{ initiative.maximumValue }}</td>
											<td>{{ initiative.minimumValue }}</td>
											<td>{{ initiative.createdAt ? initiative.createdAt|date('Y-m-d H:i:s') : '' }}</td>
											<td>
												<a href="{{ path('initiative_show', {'id': initiative.id}) }}">show</a>
												<a href="{{ path('initiative_edit', {'id': initiative.id}) }}">edit</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="7">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
                            	<div class="pull-right">{{ knp_pagination_render(initiatives) }}</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>

	<div id="myModal" class="modal fade" role="dialog">
		<div
			class="modal-dialog">

			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header bg-info">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">New Initiative</h4>
				</div>

				<div class="modal-body">
					{{ form_start(form,{'attr': {'class': 'my-form-class'} }) }}
					<div class="form-group">
						{{ form_label(form.name) }}
						{{ form_widget(form.name,{'attr':{ 'class': 'form-control'}}) }}

					</div>
                    <div class="form-group">
						{{ form_label(form.keyPerformanceIndicator) }}
						{{ form_widget(form.keyPerformanceIndicator,{'attr':{ 'class': 'select2 form-control'}}) }}

					</div>
                     <div class="form-group">
						{{ form_label(form.initiativeBehaviour) }}
						{{ form_widget(form.initiativeBehaviour,{'attr':{ 'class': 'select2 form-control'}}) }}

					</div>
                    <div class="form-group">
						{{ form_label(form.principalOffice) }}
						{{ form_widget(form.principalOffice,{'attr':{ 'class': 'select2 form-control'}}) }}

					</div>
                     <div class="form-group">
						{{ form_label(form.minimumValue) }}
						{{ form_widget(form.minimumValue,{'attr':{ 'class': 'form-control'}}) }}

					</div>
                     <div class="form-group">
						{{ form_label(form.maximumValue) }}
						{{ form_widget(form.maximumValue,{'attr':{ 'class': 'form-control'}}) }}

					</div>
                    <div class="form-group">
						{{ form_label(form.description) }}
						{{ form_widget(form.description,{'attr':{ 'class': 'form-control'}}) }}

					</div>


				</div>

			</div>
			<div class="modal-footer">
				<input class="btn btn-primary pull-right  " type="submit" value="{% trans %}Create{% endtrans %}"/>
				<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
				{{ form_end(form) }}
			</div>
		</div>

	</div>

<script>
$(function(){
$('.select2').css('width','100%').select2({allowClear:true})
})

</script>
{% endblock %}
