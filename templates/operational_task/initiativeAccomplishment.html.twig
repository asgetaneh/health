{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Operational Office{% endtrans %}</li>

{% endblock %}
{% block body %}
	<form action="{{path('send_to_principal')}}" method="post">

		<div class="row">
			<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
				<div class="widget-box widget-color-blue" id="widget-box-8">
					<div class="widget-header">
						<h5 class="widget-title bigger lighter">Principal Office
						</h5>

						<div class="widget-toolbar"></div>

						<div class="widget-toolbar">
							{# {% set value = 0 %} #}
							{# {% for performerTask in performerTasks %}
																																				{% if performerTask.status == 1 %}
																																					{% set value = 1 %}
																												
																																				{% endif %}
																												
																												
																																			{% endfor %} #}
							{# {% if value == 1 %} #}

							{# {% if remainingdays <= 10 %} #}
							{# Remainig Days=><div class="badge badge-danger">{{remainingdays}}</div> #}
								<button type="submit" class="btn btn-success"> Send To Plan Office
							</button>
							{# {% else %}
																																					Remainig Days=><div class="badge badge-danger">{{remainingdays}}</div>
																																				{% endif %}
																																			{% endif %} #}

						</div>
					</div>

					<div class="widget-body">
						<div class="widget-toolbox" id="widget-toolbox-1">
							<div class="btn-toolbar">
								<div class="btn-group"></div>


							</div>
						</div>

						<div class="widget-main padding-16">

							<div class="table-responsive">
								{% set total = 0 %}
								{% set totalmale = 0 %}
								{% set totalfemale = 0 %}
								{% set maleCount = 0 %}
								{% set femaleCount = 0 %}
								{% set count = 0 %}


								<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
									<thead>
										<tr>
											<th>#</th>
											{% if social == 1 %}

												<th>Social</th>
											{% endif %}
											<th>Operational Office</th>
											<th>Acoplishment Value</th>
										</tr>
									</thead>
									<tbody>
										{% set lengthop = operatioanlSuitables|length %}


										{% for operatioanlSuitable in operatioanlSuitables %}

											<tr>
												{% set count = count + 1 %}
												<td>{{ count}}</td>
												{% if social == 1 %}

													<td>{{operatioanlSuitable.social}}</td>
												{% endif %}
												<input type="hidden" name="opsuiId" value="{{operatioanlSuitable.id}}">
												<input type="hidden" name="planId" value="{{operatioanlSuitable.planningAcomplishment.id}}">
												<input type="hidden" name="quarter" value="{{operatioanlSuitable.quarter}}">


												<td>{{ operatioanlSuitable.operationalOffice  }}</td>

												<td>{{ operatioanlSuitable.accomplishedValue  }}</td>

												{% set total = total + operatioanlSuitable.accomplishedValue %}
											</tr>


										{% endfor %}

										<tr>
											{% if social == 1 %}

												<td colspan="3">Average</td>
											{% else %}
												<td colspan="2">Average</td>

											{% endif %}
											<td>
												<input type="hidden" name="planOffice" value="planOffice">
												{% if total %}

													<input type="hidden" name="acompAvareage" value="{{total / count}}">

													{{ total / count}}
												{% endif %}
											</td>
										</tr>

									</tbody>
								</table>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
