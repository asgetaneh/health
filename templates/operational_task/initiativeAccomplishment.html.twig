{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Operational Office{% endtrans %}</li>

{% endblock %}
{% block body %}

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Principal Office
					</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{operatioanlSuitables|length}}</strong>

						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group"></div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							{% set total = 0 %}
							{% set social = 1 %}


							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>Initiative</th>
										<th>Acoplishment Value</th>
									</tr>
								</thead>
								<tbody>
									{% set count = 0 %}
									{% set lengthop = suitableInitiatives|length %}


									{% for suitableInitiative in suitableInitiatives %}

										<tr>
											{% set count = count + 1 %}
											<td>{{ count}}</td>
											<td>{{ suitableInitiative.initiative.name }}</td>


											<td>
												<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
													<thead>
														<tr>
															<th>#</th>
															{% if suitableInitiative.initiative.socialAtrribute %}
                                                            {% set social = 0 %}
																<th>Social
																</th>
															{% endif %}

															<th>Operational Office</th>
															<th>Acoplishment Value</th>


														</tr>
													</thead>
													<tbody>
														{% set count = 0 %}
														{% set lengthop = operatioanlSuitables|length %}


														{% for operatioanlSuitable in operatioanlSuitables %}
															{% if suitableInitiative.id == operatioanlSuitable.planningAcomplishment.suitableInitiative.id %}

																<tr>
																	{% set count = count + 1 %}
																	<td>{{ count}}</td>
																	{% if suitableInitiative.initiative.socialAtrribute %}
																		<td>{{operatioanlSuitable.planningAcomplishment.socialAttribute}}
																		</td>

																	{% endif %}
																	<td>{{ operatioanlSuitable.operationalOffice  }}</td>

																	<td>{{ operatioanlSuitable.accomplishedValue  }}</td>

																	{% set total = total + operatioanlSuitable.accomplishedValue %}
																</tr>

															{% endif %}
														{% endfor %}
                                                        {% if social == 0 %}
                                                        
														<tr>
															<td colspan="3">total</td>
															<td>{{total / count}}</td>
														</tr>
                                                        {% endif %}

													</tbody>


												</table>
											</td>


										</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
