{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Performer Task{% endtrans %}</li>
{% endblock %}
{% block body %}
	<div>
		{% set taskUseridoperational = 0 %}
		{% set status = 0 %}
		{% for taskAccomplishment in taskAccomplishments   %}
			{% if loop.first %}

				{% set status = taskAccomplishment.taskUser.status %}
				{% set taskUseridoperational = taskAccomplishment.taskUser.id %}

				<ul class="steps">
					<li data-step="1" class={% if taskAccomplishment.taskUser.taskAssign.PerformerTask.plan.status == 1 %} "complete" {% elseif taskAccomplishment.taskUser.taskAssign.PerformerTask.plan.status >= 1 %} "active" {% else %} {% endif %}>
						<span class="step">A</span>
						<span class="title">
							List Task</span>
					</li>
					<li data-step="2" class={% if taskAccomplishment.taskUser.taskAssign.PerformerTask.plan.status == 2 %} "complete" {% elseif taskAccomplishment.taskUser.taskAssign.PerformerTask.plan.status >= 2 %} "active" {% else %} {% endif %}>
						<span class="step">B</span>
						<span class="title">
							Assign Task
						</span>
					</li>

					<li data-step="3" class={% if taskAccomplishment.taskUser.taskAssign.PerformerTask.plan.status == 3 %} "complete" {% elseif taskAccomplishment.taskUser.taskAssign.PerformerTask.plan.status >= 3 %} "active" {% else %} {% endif %}>
						<span class="step">C</span>
						<span class="title">Approve Performers Report
						</span>
					</li>

					<li
						data-step="4">
						{# class={% if taskAccomplishment.taskUser.status == 4 %} "complete" {% elseif taskAccomplishment.taskUser.status >= 4 %} "active" {% else %} {% endif %}> #}
						<span class="step">D</span>
						<span class="title">
							Evaluate Performer
						</span>
					</li>
					<li
						data-step="5">
						{# class={% if taskAccomplishment.taskUser.status == 5 %} "complete" {% elseif taskAccomplishment.taskUser.status >= 5 %} "active" {% else %} {% endif %}> #}
						<span class="step">E</span>
						<span class="title">
							Send Report to Principals
						</span>
					</li>
				</ul>
			{% endif %}

		{% endfor %}
	</div>

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Performer Task
						{# {{operationalTask}} #}
					</h5>


					<div class="widget-toolbar">
						<span class="btn btn-success">
							<a href="{{ path('performer_task_index') }}">back
							</a>


							{# <strong>{{tasks|length}}</strong> #}
						</span>
					</div>
				</div>


				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div
								class="btn-group">{# {% if is_granted('CREATE_PERSPECTIVE') %} #}


							</div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>TaskName</th>
										<th>Weight</th>
										<th>StartDate</th>
										<th>EndDate</th>
										<th>TimeGap</th>
										<th>Chalenge</th>
										<th>Measurement</th>

									</tr>
								</thead>

								<tbody>
									{% set count = 0 %}
									{% for taskUser in taskUsers %}
										<tr>
											{% set count = count + 1 %}
											<td>{{ count}}</td>
											<td>{{ taskUser.taskAssign.performerTask.name }}</td>
											<td>{{ taskUser.taskAssign.performerTask.weight  }}</td>

											<td>{{ taskUser.taskAssign.startDate  }}</td>
											<td>{{ taskUser.taskAssign.endDate }}</td>
											<td>{{ taskUser.taskAssign.timeGap}}</td>
											<td>{{ taskUser.note}}</td>

											<td>
												{% if status == 6 %}

													<table class="table-bordered table-hover" style="margin-top:10px;">
														<tr>
															<th>Measurement
															</th>
															<th>Expected Value
															</th>
															<th>Measurement Description
															</th>
															<th>Report Value
															</th>
															<th>Accomplishment Value
															</th>

														</tr>
														{% for taskAccomplishment in taskAccomplishments   %}
															<tr>
																{% if taskUser.id == taskAccomplishment.taskUser.id  %}

																	<td>{{ taskAccomplishment.measurement.name }}</td>
																	<input type="hidden" name="taskAccomplishmentId[]" value="{{taskAccomplishment.id}}">
																	<td>{{ taskAccomplishment.expectedValue }}</td>
																	<td>{{ taskAccomplishment.measureDescription }}</td>
																	<td>{{ taskAccomplishment.accomplishmentValue }}</td>
																	{% if taskAccomplishment.operationalValue %}
																		<td>{{ taskAccomplishment.operationalValue }}</td>


																	{% else %}
																		<td><input type="text" name="reportValue[]" class="form-conrol" required></td>
																	{% endif %}
																{% endif %}
															</tr>
														{% endfor %}


													</table>
												{% else %}
													<form action="{{path('task_operarional_approve')}}" method="post">
                                                    <input type="hidden" value="{{taskUseridoperational}}" name="taskUserId">
														<button name="Approve"type="submit"  class=" btn btn-primary">Approve</button>
													</form>
												{% endif %}
											</td>

										</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

	{% endblock %}
	{% block javascripts %}
