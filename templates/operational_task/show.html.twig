{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Operational Task{% endtrans %}</li>
{% endblock %}
{% block body %}

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Operational Task
						{# {{operationalTask}} #}
					</h5>

					<div
						class="widget-toolbar">{# TotalWeight=<div class="badge badge-danger">{{count}}</div> #}

					</div>


				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div
								class="btn-group">{# {% if is_granted('CREATE_PERSPECTIVE') %} #}


							</div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							<form class="form-inline" method="post" style="display:inline;">

								<div class="input-group">
									<input type="text" class="form-control" name="search" placeholder="search"/>
									<div class="input-group-btn">
										<button type="submit" class="btn btn-default no-border btn-sm">
											<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
										</button>
									</div>
								</div>
							</form>

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>TaskName</th>
										<th>Performer Name</th>
										<th>StartDate</th>
										<th>EndDate</th>
										<th>TimeGap</th>
										<th>Weight</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% set count = 0 %}
									{% for taskUser in taskUsers %}
										<tr>
											{% set count = count + 1 %}
											<td>{{ count}}</td>
											<td>{{ taskUser.taskAssign.performerTask.name }}</td>
											<td>{{taskUser.assignedTo.userInfo}}</td>

											<td>{{ taskUser.taskAssign.startDate  }}</td>
											<td>{{ taskUser.taskAssign.endDate  }}</td>
											<td>{{ taskUser.taskAssign.timeGap }}</td>
											<td>{{ taskUser.taskAssign.performerTask.weight }}</td>
											<td>
												<form action="{{path('operational_task_show_detail')}}" method="post">
													<input type="hidden" name="taskUser" value="{{taskUser.id}}">
													{% if taskUser.type == 1 %}
														<button class="btn btn-primary btn-sm">
															Accept
														</button>
													{% else %}
														<button class="btn btn-primary btn-sm">
															Show
														</button>
													{% endif %}
												</form>
												{% if taskUser.type == 1 %}
													<a href="{{ path('operational_task_show', {'id': taskUser.id}) }}" class="btn btn-danger btn-sm">
														Reject
													</a>
												{% endif %}


											</td>


											{# <td>
																																																																																																																																																<a href="{{ path('performer_task_show', {'id': performer_task.id}) }}" class="btn btn-primary btn-sm">
																																																																																																																																						</td> #}

										</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}
	{% block javascripts %}{% endblock %}
