{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Performer Task{% endtrans %}</li>
{% endblock %}
{% block body %}
	<div>
		{% set taskUseridoperational = 0 %}
		{% set type = 0 %}
		{% for taskAccomplishment in taskAccomplishments   %}
			{% if loop.first %}

				{% set type = taskAccomplishment.taskUser.type %}
				{% set taskUseridoperational = taskAccomplishment.taskUser.id %}

				<ul class="steps">
					<li data-step="1" class={% if taskAccomplishment.taskUser.type == 1 %} "complete" {% elseif taskAccomplishment.taskUser.type >= 1 %} "active" {% else %} {% endif %}>
						<span class="step">A</span>
						<span class="title">
							List Task</span>
					</li>
					<li data-step="2" class={% if taskAccomplishment.taskUser.type == 1 %} "complete" {% elseif taskAccomplishment.taskUser.type >= 1 %} "active" {% else %} {% endif %}>
						<span class="step">B</span>
						<span class="title">
							Assign Task
						</span>
					</li>

					<li data-step="3" class={% if taskAccomplishment.taskUser.type == 2 %} "complete" {% elseif taskAccomplishment.taskUser.type >= 1 %} "active" {% else %} {% endif %}>
						<span class="step">C</span>
						<span class="title">Accept Performers Report
						</span>
					</li>

					<li data-step="4" class={% if taskAccomplishment.taskUser.type == 3 %} "complete" {% elseif taskAccomplishment.taskUser.type >= 2 %} "active" {% else %} {% endif %}>
						<span class="step">D</span>
						<span class="title">
							Evaluate Performer
						</span>
					</li>
					<li data-step="5" class={% if taskAccomplishment.taskUser.type == 4 %} "complete" {% elseif taskAccomplishment.taskUser.type >= 3 %} "active" {% else %} {% endif %}>
						<span class="step">E</span>
						<span class="title">
							Send Report to Principals
						</span>
					</li>
				</ul>
			{% endif %}

		{% endfor %}
	</div>

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Performer Task
						{# {{operationalTask}} #}
					</h5>


					<div class="widget-toolbar">
						<span class="btn btn-success">
							<a href="{{ path('operational_task_show') }}">back
							</a>


							{# <strong>{{tasks|length}}</strong> #}
						</span>
					</div>
				</div>


				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div
								class="btn-group">{# {% if is_granted('CREATE_PERSPECTIVE') %} #}


							</div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>TaskName</th>
										<th>Weight</th>
										<th>StartDate</th>
										<th>EndDate</th>
										<th>TimeGap</th>
										<th>Chalenge</th>
										<th>Measurement</th>

									</tr>
								</thead>

								<tbody>
									{% set count = 0 %}
									{% for taskUser in taskUsers %}
										<tr>
											{% set count = count + 1 %}
											<td>{{ count}}</td>
											<td>{{ taskUser.taskAssign.performerTask.name }}</td>
											<td>{{ taskUser.taskAssign.performerTask.weight  }}</td>

											<td>{{ taskUser.taskAssign.startDate  }}</td>
											<td>{{ taskUser.taskAssign.endDate }}</td>
											<td>{{ taskUser.taskAssign.timeGap}}</td>
											<td>{{ taskUser.note}}</td>

											<td>

													<table class="table-bordered table-hover" style="margin-top:10px;">
														<tr>
															<th>Measurement
															</th>
															<th>Expected Value
															</th>
															<th>Measurement Description
															</th>
															<th>Report Value
															</th>
															<th>Accomplishment Value
															</th>

														</tr>
														{% for taskAccomplishment in taskAccomplishments   %}
															<tr>
																{% if taskUser.id == taskAccomplishment.taskUser.id  %}

																	<td>{{ taskAccomplishment.measurement.name }}</td>
																	<input type="hidden" name="taskAccomplishmentId[]" value="{{taskAccomplishment.id}}">
																	<td>{{ taskAccomplishment.expectedValue }}</td>
																	<td>{{ taskAccomplishment.measureDescription }}</td>
																	<td>{{ taskAccomplishment.accomplishmentValue }}</td>
																	{% if taskAccomplishment.operationalValue %}
																		<td>{{ taskAccomplishment.operationalValue }}</td>


																	{% else %}
																		<td><input type="text" name="reportValue[]" class="form-conrol" required></td>
																	{% endif %}
																{% endif %}
															</tr>
														{% endfor %}


													</table>
											
											</td>

										</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}

								</tbody>
							</table>
                            {% if type == 1 %}

								<button type="button" name="chalenge" data-taskuserid="{{taskUserid}}" class="btn btn-primary show pull-right">Chalenge</button>
							{% elseif type == 3 %}
								<button type="button" name="narrative" data-taskuserid="{{taskUserid}}" class="btn btn-primary narrative pull-right">Narrative Report</button>
								<button type="button" name="narrative" data-taskuseridd="{{taskUserid}}" class="btn btn-warning skip  pull-right">Skip</button>
							{% elseif type == 4 %}
								{# <button type="button" name="narrative" data-taskuseridd="{{taskUserid}}" class="btn btn-warning skip  pull-right">Skip</button> #}

							{% else %}
								<button type="submit" name="report" class="btn btn-primary pull-right">Report</button>

							{% endif %}

						</form>
						{% if type == 4 %}

							<form action="{{path('performer_task_send')}}" method="post">
								<input type="hidden" name="taskUserId" value="{{taskUserid}}">

								<button type="submit" name="narrative" class="btn btn-primary pull-right">Send Report</button>
							</form>
						{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>

	{% endblock %}
	{% block javascripts %}
		<script>
			$('.show').click(function () {
$('#chalenge').modal('show');

var id = $(this).attr('data-taskUserId');
$('.taskUserid').val(id);
console.log(consumableGroupId);
})
		</script>
		<script>
			$('.narrative').click(function () {
$('#narrative').modal('show');

var id = $(this).attr('data-taskUserId');
$('.taskUserid').val(id);
console.log(consumableGroupId);
})
$('#cancel').click(function () {
location.reload(true);

})
		</script>
		
	{% endblock %}
