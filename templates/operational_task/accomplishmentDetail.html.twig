{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Operational Office{% endtrans %}</li>
{% endblock %}
{% block body %}

	<form action="{{path('send_to_principal')}}" method="post">
		<input type="hidden" name="suitableinitiative" value="{{initiativeId}}">
		<div class="row">
			<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
				<div class="widget-box widget-color-blue" id="widget-box-8">
					<div class="widget-header">
						{% set office = 0 %}
						<h5 class="widget-title bigger lighter">{{initiativeName}}
						</h5>

						<div class="widget-toolbar"></div>

						<div class="widget-toolbar">
							{% set value = 0 %}
							{% for performerTask in performerTasks %}
								{% if performerTask.status == 1 %}
									{% set value = 1 %}

								{% endif %}


							{% endfor %}
							{% if value == 1 %}

								{% if remainingdays <= sendToPrincipal %}
									Remainig Days=><div class="badge badge-danger">1</div>

									<button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to Send this Report To Your Principal Office?');">
										Send  To Principal

									</button>
								{% else %}
									Remainig Days=><div class="badge badge-danger">1</div>
								{% endif %}
							{% endif %}
						</div>
					</div>

					<div class="widget-body">
						<div class="widget-toolbox" id="widget-toolbox-1">
							<div class="btn-toolbar"></div>
						</div>

						<div class="widget-main padding-16">

							<div class="table-responsive">

								{% set accomp = 0 %}
								{% set planValue = 0 %}
								{% set weight_total = 0 %}
								{% set total = 0 %}
								{% set sex = 0 %}
								{% set sexid = 0 %}
								{% set grand_total = 0 %}
								{% set percentPLan = 0 %}
								{% set accompSocial = 0 %}
								{% set planValueSocial = 0 %}
								{% set weight_totalSocial = 0 %}
								{% set totalSocial = 0 %}
								{% set sexsocialSocial = 0 %}
								{% set sexidsocialSocial = 0 %}
								{% set grand_totalSocial = 0 %}
								{% set percentPLanSocial = 0 %}

								{% if performerTasks %}


									<table class="table table-striped table-hover" style="margin-top:10px; wi height:100px;">
										<thead>
											<tr>
												<th>#</th>
												<th>Task Name</th>
												<th>Task Category</th>

												<th>Task Weight</th>
												<th>Quarter</th>

												<th>Accomplishment</th>


											</tr>
										</thead>
										<tbody>
											{% set countmain = 0 %}
											{% for performerTask in performerTasks %}
												{% set total_expected_value = 0 %}
												{% set total_expected_valueSocial = 0 %}
												{% set total_accomplish_valueSocial = 0 %}
												{% set total_accomplish_value = 0 %}
												<tr>
													{% set countmain = countmain + 1 %}
													<td>{{ countmain}}</td>
													<td>{{ performerTask.name }}</td>
													<td>{{ performerTask.taskCategory.name }}</td>
													<td>{{ performerTask.weight }}</td>
													<td>{{ performerTask.quarter }}</td>
													{% set weight_total  =  weight_total + performerTask.weight  %}


													<input type="hidden" name="quarterId" value="{{performerTask.quarter}}">

													<td colspan="2">
														<table class="table table-bordered  table-responsive-xl table-hover">
															<tr>
																<th>
																	Performer Name</th>
																<th>Expected Value</th>
																<th>Accomplishment</th>
																<th>Accomplishment%
																</th>
															</tr>
															{% set count = 0 %}
															{% set perceent = 0 %}
															{% set perceentSocial = 0 %}
															{% set idpt = 0 %}
															{% for taskAcomolish in taskAcomolishs %}
																<tr>

																	{% if performerTask.id == taskAcomolish.taskAssign.performerTask.id %}
																		{% set count = count + 1 %}
																		{% set percent = taskAcomolish.accomplishmentValue * 100 / taskAcomolish.expectedValue %}
																		{% if social == 1 %}
																			{% set planValueSocial = taskAcomolish.taskAssign.performerTask.operationalPlanningAccSocial.planValue %}
																			{% set total_expected_valueSocial  =  total_expected_valueSocial + taskAcomolish.expectedValueSocial  %}
																			{% set total_accomplish_valueSocial = total_accomplish_valueSocial + taskAcomolish.accomplishmentValueSocial %}
																			{% set percentSocial = taskAcomolish.accomplishmentValueSocial * 100 / taskAcomolish.expectedValueSocial %}
																		{% endif %}
																		{% set total_expected_value  =  total_expected_value + taskAcomolish.expectedValue  %}

																		{% set planValue = taskAcomolish.taskAssign.performerTask.operationalPlanningAcc.planValue %}

																		{% set total_accomplish_value = total_accomplish_value + taskAcomolish.accomplishmentValue %}
																		<td>{{taskAcomolish.taskAssign.assignedTo.userInfo}}</td>
																		<td>
																			{% if social == 1 %}
																				Male=
																			{% endif %}
																			{{ taskAcomolish.expectedValue }}
																			{% if social == 1 %}

																				Female={{ taskAcomolish.expectedValueSocial }}
																			{% endif %}
																		</td>
																		<td>
																			{% if social == 1 %}
																				Male=
																			{% endif %}
																			{{ taskAcomolish.accomplishmentValue }}
																			{% if social == 1 %}
																				Female=
																				{{ taskAcomolish.accomplishmentValueSocial }}
																			{% endif %}
																		</td>
																		{% if percent > 100  %}
																			<td class="badge badge-primary">
																				{% if social == 1 %}
																					Male=
																				{% endif %}
																				{{ percent | number_format(2, '.',',') }}
																			</td>
																		{% elseif percent <= 100  and percent >= 75 %}
																			<td class="badge badge-success">
																				{% if social == 1 %}
																					Male=
																				{% endif %}
																				{{ percent | number_format(2, '.',',') }}</td>
																		{% elseif percent <= 74  and percent >= 50 %}

																			<td class="badge badge-warning">
																				{% if social == 1 %}
																					Male=
																				{% endif %}
																				{{ percent | number_format(2, '.',',') }}</td>
																		{% else %}
																			<td class="badge badge-danger">
																				{% if social == 1 %}
																					Male=
																				{% endif %}
																				{{ percent | number_format(2, '.',',') }}</td>
																		{% endif %}
																		{% if social == 1 %}


																			{% if percentSocial > 100  %}

																				<td class="badge badge-primary">Female={{ percentSocial | number_format }}
																				</td>
																			{% elseif percentSocial <= 100  and percentSocial >= 75 %}
																				<td class="badge badge-success">Female={{ percentSocial | number_format }}</td>
																			{% elseif percentSocial <= 74  and percentSocial >= 50 %}

																				<td class="badge badge-warning">Female={{ percentSocial | number_format }}</td>
																			{% else %}
																				<td class="badge badge-danger">Female={{ percentSocial | number_format }}</td>
																			{% endif %}
																		{% endif %}
																	{% endif %}
																</tr>
															{% endfor %}

														</table>
													</td>
												</tr>

												<tr>
													<td></td>
													<td>Weight Accomplished
													</td>
													{% if total_accomplish_value   %}

														<td>
															{% if social == 1 %}
																Male=
															{% endif %}

															{% set grand_total = grand_total + total_accomplish_value * performerTask.weight / total_expected_value  %}
															{% set total = total_accomplish_value * performerTask.weight / total_expected_value  %}
															{{total | number_format  }}

														</td>
														{% if social == 1 %}

															<td>
																Female=
																{% set grand_totalSocial = grand_totalSocial + total_accomplish_valueSocial * performerTask.weight / total_expected_valueSocial  %}
																{% set totalSocial = total_accomplish_valueSocial * performerTask.weight / total_expected_valueSocial  %}
																{{totalSocial | number_format   }}

															</td>
														{% endif %}

													{% endif %}

													<td></td>
												</tr>


											{% else %}
												<tr>
													<td colspan="8">no records found</td>
												</tr>
											{% endfor %}
										</tbody>
									</td>
								</tr>
								<tr>
									<td colspan="2">Grand total</td>
									<td>
										{% if social %}
											Male=
										{% endif %}
										{{ grand_total | number_format(2, '.',',') }}
									</td>
									{% if social %}

										<td>Female={{ grand_totalSocial | number_format }}
										</td>
									{% endif %}
								</tr>
								<tr>
									<td colspan="2">Initiative Total
										{% if social == 1 %}
											(Male)
										{% endif %}
									</td>
									<td>
										{{planValue}}
									</td>
									<td>
										{% if social == 1 %}

											{% set percentPLan = ((( grand_total * planValue)  / weight_total) * 100 ) / planValue %}
											{% if percentPLan | number_format > 100 %}
												<div class="badge badge-primary">
													{{ ((grand_total * planValue)  / weight_total) | number_format }}

												</div>
											{% elseif percentPLan | number_format <= 100 and percentPLan | number_format >= 75 %}
												<div class="badge badge-success">
													{{ ((grand_total * planValue)  / weight_total) | number_format }}

												</div>
											{% elseif percentPLan | number_format <= 74 and percentPLan | number_format >= 50 %}
												<div class="badge badge-warning">
													{{ ((grand_total * planValue)  / weight_total) | number_format }}

												</div>
											{% else %}
												<div class="badge badge-danger">
													{{ ((grand_total * planValue)   / weight_total) | number_format }}

												</div>
											{% endif %}
											<input type="hidden" name="accomp[]" value="{{((grand_total * planValue) / weight_total)  }}">
										{% else %}
											{% if planValue %}

												{% set percentPLan = (((grand_total * planValue)  / 100) * 100 ) / planValue %}
											{% endif %}
											{% if percentPLan | number_format (2, '.','.') > 100 %}
												<div class="badge badge-primary">

													{{ ((grand_total * planValue) / 100) | number_format(2, '.',',')   }}
												</div>
											{% elseif percentPLan | number_format (2, '.','.') <= 100 and percentPLan | number_format (2, '.','.') >= 75 %}
												<div class="badge badge-success">

													{{ ((grand_total * planValue)  / 100) | number_format(2, '.',',')   }}
												</div>
											{% elseif percentPLan | number_format (2, '.','.') <= 74 and percentPLan | number_format (2, '.','.') >= 50 %}
												<div class="badge badge-warning">

													{{ ((grand_total * planValue)  / 100) | number_format(2, '.',',')   }}
												</div>
											{% else %}
												<div class="badge badge-danger">

													{{ ((grand_total * planValue)  / 100) | number_format(2, '.',',')   }}
												</div>
											{% endif %}
											<input type="hidden" name="accomp[]" value="{{((grand_total * planValue) / 100) }}">

										{% endif %}

									</td>
								</tr>
								{% if social == 1 %}

									<tr>
										<td colspan="2">Initiative Total (Female)</td>
										<td>
											{{planValueSocial}}
										</td>
										<td>

											{% set percentPLanSocial = ((( grand_totalSocial * planValueSocial)  / weight_total) * 100 ) / planValueSocial %}
											{% if percentPLanSocial | number_format > 100 %}
												<div class="badge badge-primary">
													{{ ((grand_totalSocial * planValueSocial)  / weight_total) | number_format }}

												</div>
											{% elseif percentPLanSocial | number_format <= 100 and percentPLanSocial | number_format >= 75 %}
												<div class="badge badge-success">
													{{ ((grand_totalSocial * planValueSocial)  / weight_total) | number_format }}

												</div>
											{% elseif percentPLanSocial | number_format <= 74 and percentPLanSocial | number_format >= 50 %}
												<div class="badge badge-warning">
													{{ ((grand_totalSocial * planValueSocial)  / weight_total) | number_format }}

												</div>
											{% else %}
												<div class="badge badge-danger">
													{{ ((grand_totalSocial * planValueSocial)   / weight_total) | number_format }}

												</div>
											{% endif %}
											<input type="hidden" name="accomp[]" value="{{((grand_totalSocial * planValueSocial) / weight_total) | number_format }}">


										</td>
									</tr>
								{% endif %}

							</table>
						{% endif %}
						{#  #}

					</div>
				</div>
			</div>
		</div>
	</div>
</div></form>{% endblock %}{% block javascripts %}{% endblock %}
