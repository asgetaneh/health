{% extends 'base.html.twig' %}

{% block title %}OperationalTask index{% endblock %}

{% block body %}
    <h1>OperationalTask index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TaskName</th>
                <th>Description</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>TimeGap</th>
                <th>Weight</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operational_task in operational_tasks %}
            <tr>
                <td>{{ operational_task.id }}</td>
                <td>{{ operational_task.taskName }}</td>
                <td>{{ operational_task.description }}</td>
                <td>{{ operational_task.startDate ? operational_task.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ operational_task.endDate }}</td>
                <td>{{ operational_task.timeGap }}</td>
                <td>{{ operational_task.weight }}</td>
                <td>
                    <a href="{{ path('operational_task_show', {'id': operational_task.id}) }}">show</a>
                    <a href="{{ path('operational_task_edit', {'id': operational_task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('operational_task_new') }}">Create new</a>
{% endblock %}
