{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Operational Task{% endtrans %}</li>

{% endblock %}
{% block body %}

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Operational Task
					</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{count|length}}</strong>

						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group"></div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							<form class="form-inline" method="post" style="display:inline;">

								<div class="input-group">
									<input type="text" class="form-control" name="search" placeholder="search"/>
									<div class="input-group-btn">
										<button type="submit" class="btn btn-default no-border btn-sm">
											<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
										</button>
									</div>
								</div>
							</form>
							{% set status = 1 %}

							{% set office = 0 %}
							{% for item in app.user.operationalManagers|filter(pr=> pr.isActive == 1) %}
								{% set  office = item.operationalOffice.id %}

							{% endfor %}

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>Suitable Initiative</th>
										<th>Operational Office</th>
										<th>Plan</th>
										<th>actions</th>
										<th>Report to Principal Office</th>
										<th>Status</th>
									</tr>
								</thead>
								<tbody>
									{% set count =  operationalSuitables.getItemNumberPerPage() * (operationalSuitables.getCurrentPageNumber() -1) %}

									{% set task = 0 %}
									{% set create = 0 %}
									{% set assign = 0 %}
									{% for operationalSuitable in operationalSuitables %}
										<tr>
											{% set count = count + 1 %}

											<td>{{ count}}</td>
											<td>{{operationalSuitable. suitableInitiative.initiative.name }}</td>

											<td>{{ operationalSuitable.operationalOffice.name  }}</td>
											<td>
												{% for operationalPlanningAccomplishment in operationalPlanningAccomplishments %}
													{% if operationalPlanningAccomplishment.operationalSuitable.id == operationalSuitable.id %}
														{% if operationalPlanningAccomplishment.quarter.id == quarter %}
															{% if operationalPlanningAccomplishment.socialAttribute %}
																{% if operationalPlanningAccomplishment.socialAttribute.code == 1 %}
																	Male=
																	{{ operationalPlanningAccomplishment.planValue  }}
																{% else %}
																	Female=
																	{{ operationalPlanningAccomplishment.planValue  }}


																{% endif %}

															{% else %}
																{{ operationalPlanningAccomplishment.planValue  }}

															{% endif %}
														{% endif %}
													{% endif %}
												{% endfor %}
											</td>
											<td>

												{% if getTaskStatus(operationalSuitable.id,office) %}
													{# {{getTaskStatus(suitableInitiative.id,office)}} #}
													<a href="{{ path('operational_task_index', {'id': operationalSuitable.id}) }}" title="show" class="btn btn-primary btn-sm">
														Assign
													</a>
												{% else %}
													<a href="{{ path('operational_task_index', {'id': operationalSuitable.id}) }}" title="show" class="btn btn-primary btn-sm">
														Create
													</a>
												{% endif %}
											</td>

											<td>

												<a href="{{ path('acomplishment_task_detail', {'id': operationalSuitable.id}) }}" title="show" class="btn btn-success btn-sm">
													Report
												</a>
												{# {% endif %} #}
											</td>
											<td>

												{% if getTaskStatus(operationalSuitable.id,office) %}
													<div class="badge badge-primary">
														create
													</div>
												{% endif %}
												{% if getTaskStatusAssigned(operationalSuitable.id,office) %}
													<div class="badge badge-danger">
														assign
													</div>
												{% endif %}
												{% if getTaskStatusSend(operationalSuitable.id,office) %}
													<div class="badge badge-success">
														send
													</div>
												{% endif %}


											</td>

										</tr>

									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}

								</tbody>
							</table>
							<div class="pull-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(operationalSuitables) }}</div>
						</div>

					</div>
					{# {% if not operationalSuitables %} #}

						{{ form_start(uploadPlan,{'attr': {'role':'form'}}) }}<div class="row">
							<div class="form-group col-md-3 ">
								{{ form_widget(uploadPlan.uploadPlan,{'attr':{'class':'form-control  ','placeholder':'File','autocomplete':'off'}}) }}
								<div class="help-block with-errors"></div>
							</div>
							<button type="submit" name="stock-request" class="btn btn-primary ">Upload Plan</button>
						</div>
						{{ form_end(uploadPlan) }}
					{# {% endif %} #}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
