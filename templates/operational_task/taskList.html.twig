{% extends 'base.html.twig' %}
{% block application_simple_title %}
	<strong>
		{% trans %}Strategic Management Information System{% endtrans %}</strong>
{% endblock %}
{% block mainTitle %}
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}MIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>
	<li>
		<i class="icon-home home-icon"></i>
		<a href="">{% trans %}SMIS{% endtrans %}</a>

		<span class="divider">
			<i class="arrow-icon"></i>
		</span>
	</li>

{% endblock %}
{% block subTitle %}
	<li class="active">{% trans %}Operational Office{% endtrans %}</li>

{% endblock %}
{% block body %}

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">Operational Office
					</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{operational_tasks_assigns|length}}</strong>

						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group"></div>


						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							<form class="form-inline" method="post" style="display:inline;">

								<div class="input-group">
									<input type="text" class="form-control" name="search" placeholder="search"/>
									<div class="input-group-btn">
										<button type="submit" class="btn btn-default no-border btn-sm">
											<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
										</button>
									</div>
								</div>
							</form>

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>TaskName</th>
										<th>Description</th>
										<th>StartDate</th>
										<th>EndDate</th>
										<th>TimeGap</th>
										<th>Weight</th>
										<th>Measurement</th>
										<th>Expected Value</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% set count = 0 %}
									{% set lengthop = operational_tasks_assigns|length %}


									{% for operational_tasks_assign in operational_tasks_assigns %}

										<tr>
											{% set count = count + 1 %}
											<td>{{ count}}</td>
											<td>{{ operational_tasks_assign.taskUser.taskAssign.operationalTask.taskName }}</td>

											<td>{{ operational_tasks_assign.taskUser.taskAssign.operationalTask.description }}</td>


											<td>{{ operational_tasks_assign.taskUser.taskAssign.operationalTask.startDate  }}</td>


											<td>{{ operational_tasks_assign.taskUser.taskAssign.operationalTask.endDate }}</td>

											<td>{{ operational_tasks_assign.taskUser.taskAssign.operationalTask.timeGap }}</td>
											<td>{{ operational_tasks_assign.taskUser.taskAssign.operationalTask.weight }}</td>
											<td>{{ operational_tasks_assign.measurement.name }}</td>
											<td>{{ operational_tasks_assign.expectedValue }}</td>


											<td>
												<a href="{{ path('operational_task_show', {'id': operational_tasks_assign.id}) }}" class="btn btn-primary btn-sm">


													<i class="fa fa-eye"></i>
												</a>
												<a href="{{ path('operational_task_show', {'id': operational_tasks_assign.id}) }}" class="btn btn-danger btn-sm">

													Reject
												</a>

												<a href="{{ path('performer_task_index', {'id': operational_tasks_assign.taskUser.taskAssign.operationalTask.id}) }}" class="btn btn-warning btn-sm">


													Create</a>
											</td>


										</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
