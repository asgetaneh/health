{% extends 'base.html.twig' %}

{% block subTitle %}
	<li class="active">{% trans %}
		SMIS{% endtrans %}</li>
	<li class="active">{% trans %}
		Principal Office{% endtrans %}</li>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">
						<strong>Principal Office</strong>
					</h5>
					<div class="widget-toolbar">
						<span class="badge badge-info">
							{% trans %}Total{% endtrans %}
							:
							<strong>{{principal_offices|length}}</strong>

						</span>
					</div>
				</div>
				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group">
								<a class="btn btn-primary btn-sm btn-white btn-round" data-toggle="modal" data-target="#myModal">
									<i class="ace-icon fa fa-plus bigger-110 blue"></i>
									{% trans %}
									Add New
									{% endtrans %}</a>

							</div>
						</div>
					</div>
					<div class="widget-main padding-16">
						<div class="table-responsive">
							<table class="table table-striped table-bordered table-hover">

								<thead>
									<tr></tr>
									<tr>
										<th>Id</th>
										<th>Name</th>
										<th>Director</th>

										<th>Status</th>
										<th>CreateAt</th>
										<th>Description</th>
										<th>actions</th>
									</tr>
								</thead>
							</tr>
						</thead>
						<tbody>
							{% for principal_office in principal_offices %}
								<tr>
									<td>{{ principal_office.id }}</td>
									<td>{{ principal_office.name }}</td>
									<td>
										{% for director in  
                                        principal_office.principalManagers %}
                                        {{director.principal|title}}
                                        {% endfor %}

									</td>

									<td>
										{% if principal_office.isActive %}
											<span class="label label-success">Active</span>
										{% else %}
											<span class="label label-danger">deactive</span>

										{% endif %}

									</td>
									<td>{{ principal_office.createAt ? principal_office.createAt|date('d-M-Y') : '' }}</td>
									<td>{{ principal_office.description }}</td>
									<td>
										<a class="btn btn-primary btn-xs" href="{{ path('principal_office_show', {'id': principal_office.id}) }}">
											<i class="fa fa-eye"></i>
											show</a>
										<a class="btn btn-warning btn-xs" href="{{ path('principal_office_edit', {'id': principal_office.id}) }}">
											<i class="fa fa-edit"></i>
											edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}

						</tbody>
					</table>
					<div class="pull-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(principal_offices) }}</div>

				</div>

			</div>
		</div>

	</div>

</div></div><div id="myModal" class="modal fade" role="dialog">
<div
	class="modal-dialog">

	<!-- Modal content-->
	<div class="modal-content">
		<div class="modal-header bg-primary">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
			<h4 class="modal-title">New principal Office</h4>
		</div>

		<div class="modal-body">
			{{ form_start(form,{'attr': {'class': 'my-form-class'} }) }}
			<div class="form-group">
				{{ form_label(form.name," Title") }}
				{{ form_widget(form.name,{'attr':{ 'class': 'form-control'}}) }}

			</div>

			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description,{'attr':{ 'class': 'form-control'}}) }}

			</div>

		</div>

	</div>
	<div class="modal-footer">
		<input class="btn btn-primary pull-right  " type="submit" value="{% trans %}Create{% endtrans %}"/>
		<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
		{{ form_end(form) }}
	</div>
</div></div>{% endblock %}
