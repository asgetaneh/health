{% if suitableInitiative is defined %}
	<div  class="modal fade planmodal" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header bg-primary">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">
						{{suitableInitiative.initiative.name|title}}
						Plan({{suitableInitiative.initiative.initiativeBehaviour|title}})</h4>
				</div>
				<div class="modal-body">
					<form method="post"  action="{{path('plan_phase_office')}}"  class="form-horizontal" >
						<div class="row">
							<div class="col-sm-12">

								<input type="hidden" name="code" value="{{suitableInitiative.initiative.initiativeBehaviour.category.code}}">
                                <input type="hidden" name="suitableInitiative" value="{{suitableInitiative.id}}">
                         
								{% for plan in suitableInitiative.plans %}
                                 <input type="hidden" name="plan[]" value="{{plan.id}}">
									
										<div class="well well-sm">
											<strong>{{plan.quarter.slug}}
												Quarter</strong>
										</div>
										{% if suitableInitiative.initiative.initiativeBehaviour.category.code == "1" %}
											<div class="form-group">
												 <label class="control-label  col-sm-2" for="">Plan {{plan.quarter.slug}}</label>
                                                 <div class="col-sm-8">
												<input type="text" name="planvalue[]" class="form-control" placeholder="enter your plan value">
										     	</div>
                                            </div>
										{% endif %}


										{% for attribute in suitableInitiative.initiative.initiativeBehaviour.category.initiativeAttributes %}

											{% if attribute.initiativeBehaviourCategory.code == "2" %}
                                            {# <input type="hidden" name="denimanitorattribu" value="{{attribute.id}}"> #}
												<div class="form-group">
                                                <label class="control-label  col-sm-2" for="{{attribute.id}}">Plan {{plan.quarter.slug}} </label>
                                                <div class="col-sm-8">
													<input type="text" name="planvalue[]" class="form-control" id="{{attribute.id}}" placeholder="expected value">
													{# <input type="hidden" name="planvalue[]" value="{{plan.id}}"> #}
												</div>
                                               </div>
												<div class="form-group">
													<label class="control-label col-sm-2" for="{{attribute.id}}">{{attribute.name|title}}</label>
                                                    <div class="col-sm-8">
													<input type="text" class="form-control" id="{{attribute.id}}" name="denimanitor[]" placeholder="denimanitor">
                                                    </div>
												</div>

											{% elseif attribute.initiativeBehaviourCategory.code =="3" %}
												<div class="form-group">
                                               
                                                   <input type="hidden" name="attr[]" value="{{attribute.id}}">
													<label class="control-label  col-sm-2" for="{{attribute.id}}">{{attribute.name|title}}:</label>
                                                    <div class="col-sm-8">
													<input type="text" name="planvalue[]" class="form-control" id="{{attribute.id}}" placeholder="expected value">
												</div>
                                                </div>
											{% endif %}
										{% endfor %}
									
								{% endfor %}


							


				</div>


			</div>

		
	
	<div class="modal-footer">
	
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>


	</div>
      </form>
</div>
</div></div></div>
{% endif %}
