  $(function(){

		$('#checkall').click(function () {
var $chk = $(':checkbox');
$chk.prop('checked', $(this).is(':checked'));

})

 
	
$('#suitablebutton').click(function () {
  
$('#initiative_form').submit();
})

 });

	</script>
     
  
