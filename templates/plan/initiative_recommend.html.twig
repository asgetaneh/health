										<b class="text-primary">Action</b>
										<i class="ace-icon fa fa-chevron-down icon-on-right"></i>
									</button>

									<ul class="dropdown-menu dropdown-yellow dropdown-menu-right dropdown-caret">
										<li>
											<a href="#" id="suitablebutton">
												<i class="ace-icon fa fa-stop green"></i>
												Select As Suitable</a>
										</li>


									</ul>
								</div>

							</div>
						</div>
                        
						<div class="table-responsive col-md-12" style="margin-top:20px;">

                         
							<table id="dynamic-table" class="table table-striped table-bordered table-hover">
							
								<thead>
									<tr>
										<th class="text-center">
											<label class="inline">

												<input type="checkbox"  id="checkall"  class="ace">
												<span class="lbl"></span>
											</label>
										</th>
										<th>#</th>
										<th>{% trans %}Name{% endtrans %}</th>

										<th>{% trans %}Weight{% endtrans %}</th>

										<th>{% trans %}Description{% endtrans %}</th>
										<th>{% trans %}actions{% endtrans %}</th>
									</tr>
								</thead>
                                
								<tbody>
									{# {% set count =  initiatives.getItemNumberPerPage() * (initiatives.getCurrentPageNumber() -1) %} #}
									{% set count = 0 %}
									<form action="{{path('plan_index')}}" id="initiative_form" method="get">
										<input type="hidden" name="planyear" value="{{planyear.id}}">
										<input type="hidden" name="office" value="{{pricipaloffice.id}}">

										{% for initiative in initiatives %}
											<tr>
												{% set count = count+1 %}


												<td class="text-center">
													<label class="inline">
														<input type="checkbox" name="initiative[]" value="{{initiative.id}}" class="ace" required>
														<span class="lbl"></span>
													</label>
												</td>
												<td>{{count}}

												</td>
												<td>{{ initiative.name }}</td>
												<td>{{ initiative.weight }}</td>


												<td>{{ initiative.description|raw}}</td>
												<td>
													<a href="{{ path('initiative_show', {'id': initiative.id}) }}" class="btn btn-primary btn-sm">
														<i class="fa fa-eye"></i>
													</a>


												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="8">no records found</td>
											</tr>
										{% endfor %}
                                        </form>
									
								</tbody>
                                
							</table>
							{# <div class="pull-right" id="">{{ knp_pagination_render(initiatives) }}</div> #}

