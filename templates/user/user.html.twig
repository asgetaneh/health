{% extends 'base.html.twig' %}

{% block title %}User Group
{% endblock %}


{% block body %}


	<div
		class="row">
		<!-- [ sample-page ] start -->
		<div class="col-sm-12">
			<div class="card">

				<div class="card-header">
					{{ user_group.name }}
					User Group

					<div class="card-header-right">
						<a href="{{ path('user') }}" class="btn btn-success">
							Back</a>

					</div>
				</div>
				<form
					method="POST">

					<!-- /.card-header -->
					<div class="card-body">


						<div class="row">
							<div class="col-12">

								<div class="form-group">
									<input hidden value="{{ user_group.id}}" name="usergroupuser">
									<select class="duallistbox" multiple="multiple" name="user[]">
										{% for user in user_group.users %}
											<option selected value="{{user.id}}">
												{{ user.userInfo }}
											
												</option>
										{% endfor %}
										{% for user in users %}
											<pre>
								</pre>
											<option value="{{user.id}}">
												{{ user.userInfo }}
												
											</option>
										{% endfor %}


									</select>
								</div>
								<!-- /.form-group -->

							</div>
							<!-- /.col -->
						</div>
						<!-- /.row -->
					</div>
					<!-- /.card-body -->
					<div class="card-footer float-right">
						<div class="float-right">
							<a href="{{path('user')}}" class="btn btn-primary">Cancel</a>
							<button class="btn btn-info  ">Save</button>


						</div>
					</div>
				</form>
			</div>
		</div>
		<!-- [ sample-page ] end -->
	</div>
	<!-- /.card -->

{% endblock %}
{% block javascripts %}

	<script src="{{asset('assets/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js')}}"></script>
	<script>
		$(function () {
$('.duallistbox').bootstrapDualListbox({
nonSelectedListLabel: 'User List',
selectedListLabel: 'Users In The Group',
preserveSelectionOnMove: 'moved',
moveOnSelect: false,
moveSelectedLabel: "Add Selected Users to This Group",
moveAllLabel: "Add All Users to This Group ",
removeSelectedLabel: "Remove Selected Users From This Group",
removeAllLabel: "Remove All Users From This Group",
selectorMinimalHeight: "200"
});
})
	</script>
{% endblock %}
