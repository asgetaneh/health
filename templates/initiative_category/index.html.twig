{% extends 'base.html.twig' %}

{% block title %}InitiativeCategory index
{% endblock %}

{% block body %}
	
	

	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<h5 class="widget-title bigger lighter">
						<strong>Initiative Category</strong>
					</h5>

					<div class="widget-toolbar"></div>

					<div class="widget-toolbar">
						<span class="badge badge-info">
						
						</span>
					</div>
				</div>

				<div class="widget-body">
					<div class="widget-toolbox" id="widget-toolbox-1">
						<div class="btn-toolbar">
							<div class="btn-group">
								{% if is_granted('ad_intv') %}
									<a class="btn btn-primary btn-sm btn-white btn-round" href="{{ path('initiative_category_new') }}" >
										<i class="ace-icon fa fa-plus bigger-110 blue"></i>
										{% trans %}
										New Category{% endtrans %}</a>
								{% endif %}

								{# <form class="form-inline" method="post" style="display:inline;">
																																																																										<input type="hidden" name="nonapplicable" value="nonapp"/>
																																																																										<button type="submit" class="btn btn-warning btn-sm btn-white btn-round">
																																																																											<i class="ace-icon fa fa-times bigger-110 red2"></i>
																																																																											{% trans %}
																																																																											None Applicable Initiatives{% endtrans %}</button>
																																																																									</form> #}

							</div>

						</div>
					</div>

					<div class="widget-main padding-16">

						<div class="table-responsive">
							<form class="form-inline" method="get" style="display:inline;">

								<div class="input-group">
									<input type="text" class="form-control" name="search" placeholder="search"/>
									<div class="input-group-btn">
										<button type="submit" class="btn btn-default no-border btn-sm">
											<i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
										</button>
									</div>
								</div>
							</form>
							

							<table class="table table-striped table-bordered table-hover" style="margin-top:10px;">
								<thead>
									<tr>
										<th>#</th>
										<th>Name</th>
                                        <th>Code</th>
										<th>Description</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% set count =  0 %}
									{% for initiative_category in initiative_categories %}
										{% set count = count + 1 %}
										<td>{{ initiative_category.id }}</td>
										<td>{{ initiative_category.name }}</td>
                                        <td>{{ initiative_category.code }}</td>
										<td>{{ initiative_category.description }}</td>
										<td>
											{% if is_granted('vw_intv_dtl') %}


												<a style="margin-bottom:5px;" href="{{ path('initiative_show', {'id': initiative_category.id}) }}" title="view details" class="btn btn-sm btn-info">
													<i class="fa fa-eye"></i>
												</a>
											{% endif %}
											{% if is_granted('edt_intv') %}
												<a style="margin-bottom:5px;" href="{{ path('initiative_category_edit', {'id': initiative_category.id}) }}" title="edit" class="btn btn-sm btn-warning">
													<i class="fa fa-edit"></i>
												</a>
											{% endif %}
											
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="7">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					
					</div>
				</div>
			</div>
		</div>
	</div>

</div>{% endblock %}
