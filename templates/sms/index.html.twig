{% extends 'base.html.twig' %}

{% block title %}
	Send Sms
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12 col-sm-12 widget-container-col" id="widget-container-col-8">
			<div class="widget-box widget-color-blue" id="widget-box-8">
				<div class="widget-header">
					<div class="widget-toolbar">
						<button type="button" name="reject" class="btn btn-sm btn-danger show ">
							Send Sms For All User</button>
					</div>
				</div>

				<div class="widget-body">


					<div class="widget-main padding-16">


						<div class="row">
							{{ form_start(form,{'attr': {'role':'form','class':' ' }}) }}

							<div class="col-md-4">
								<div class="form-group form-group">
									<label class="col-md-6 control-label ">{{ form_label(form.principalOffice) }}</label>
									{{ form_widget(form.principalOffice,{'attr':{'class':'select2   ' }}) }}
									<div class="help-block with-errors"></div>

								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group form-group">
									<label class="col-md-6 control-label ">{{ form_label(form.operationalOffice) }}</label>
									{{ form_widget(form.operationalOffice,{'attr':{'class':'select2 ' }}) }}
									<div class="help-block with-errors"></div>

								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group form-group">
									<label class="col-md-6 control-label ">{{ form_label(form.performer) }}</label>
									{{ form_widget(form.performer,{'attr':{'class':'select2  ' }}) }}
									<div class="help-block with-errors"></div>

								</div>
							</div>
						</div>
						<div class="row">


							<div class="col-md-4">
								<div class="form-group form-group">
									{{ form_label(form.message,'Message ') }}
									{{ form_widget(form.message,{'attr':{'class':' principal form-control ','data-placeholder':'Message','required':'true' }}) }}
								</div>
							</div>


							<div class="col-md-12">
								<div class="form-group pull-right" style="margin-top:25px;">
									<input type="submit" class="btn btn-primary btn-sm " value="Sms">
								</div>
							</div>


							{{ form_end(form) }}
						</div>


					</div>

				</div>


			</div>
		</div>
	</div>
	<div id="sms" class="modal fade" role="dialog">
		<div
			class="modal-dialog " style="width:500px;">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header bg-info">
					<button type="button" class="close" data-dismiss="modal">&times;</button>

					<h4 class="modal-title">Message
					</h4>

				</div>
				<form method="post" action="{{path('sms_index')}}">
					<div class="modal-body">
						<input type="hidden" name="allmessgae" value="1">
						<div class="form-group">
							<textArea name="message" required class="form-control"></textArea>

						</div>
					</div>
					<div class="modal-footer justify-content-between">
						<button type="button" class="btn btn-default closes" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-primary go">Send</button>
					</div>

				</form>


			</div>

		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script>
		$('.show').click(function () {
$('#sms').modal('show');


})
	</script>

{% endblock %}
