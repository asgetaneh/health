{
    "editor.definitionLinkOpensInPeek": true,
    "editor.codeLens": false,
    "editor.multiCursorPaste": "full",
    "editor.renderControlCharacters": false,
    "editor.tabCompletion": "on",
    "editor.wrappingIndent": "indent",
    "editor.wrappingStrategy": "advanced",
    "editor.defaultFormatter": "VisualStudioExptTeam.vscodeintellicode",
    "json.format.enable": false,
    "javascript.format.insertSpaceAfterCommaDelimiter": false,
    "files.autoGuessEncoding": true,
    "html.autoClosingTags": false,
    "editor.wordWrap": "on",
    "editor.fontSize": 15,
    "[twig]": {
        "editor.defaultFormatter": "mblode.twig-language-2"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "diffEditor.wordWrap": "off",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.autoIndent": "brackets",
    "[html]": {
        "editor.defaultFormatter": "mblode.twig-language"
    },
    "editor.padding.bottom": 3,
    "editor.padding.top": 3,
    "editor.suggest.shareSuggestSelections": true
}